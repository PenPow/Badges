---
import { menuLinks } from "../../site.config.ts";

import { Image } from 'astro:assets';

import Logo from "../../assets/documentation/docs-rs/cozy-minimal.svg";

const url = new URL(Astro.request.url);
---

<header class="mb-4">
	<a href="/">
		<Image class="w-32 h-32 inline" src={Logo} alt="Me"/>
		<p class="sr-only">Button to go back to home page</p>
	</a>
	<h1 class="text-zinc-800 dark:text-zinc-100 text-5xl font-title font-bold mt-4">
		Pretty Badges
	</h1>
	<div class="flex flex-row gap-2 mt-2 items-center">
		<nav
			id="navigation-menu"
			class="-ml-2.5 xs:ml-0 -inset-x-4 top-14 divide-x-2 py-2 sm:-ms-4 sm:py-0"
			aria-label="Main menu"
		>
			{
				menuLinks.map((link) => (
					<a
						href={link.path}
						class="px-4 py-4 text-lg sm:py-0 text-blue-500 hover:text-blue-600"
						aria-current={url.pathname === link.path ? "page" : false}
						data-astro-prefetch
					>
						{link.title}
					</a>
				))
			}
		</nav>
	</div>
</header>

